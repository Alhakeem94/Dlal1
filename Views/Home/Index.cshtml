@model Dalal.ViewModels.HomePageViewModel
@{
    ViewData["Title"] = "Home Page";
}

    <div id="carouselExampleFade" class="carousel slide carousel-fade" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="images/cc.png" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="images/qq.png" class="d-block w-100" alt="...">
            </div>
            @*<div class="carousel-item">
                <img src="..." class="d-block w-100" alt="...">
            </div>*@
        </div>
        <a class="carousel-control-prev" href="#carouselExampleFade" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleFade" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <br />
    <form class="form-inline md-form mr-auto mb-4 justify-content-md-center" method="post" asp-controller="Products" asp-action="Search">
        <input class="form-control mr-sm-2 text-center" type="text" placeholder="اسم المنتج" asp-for="@Model.SearchedProduct">
        <button class="btn btn-outline-warning btn-rounded btn-sm my-0" type="submit">بحث</button>
    </form>

<br />
<h2 class="text-center">المنتجات التي تحتوي على خصومات</h2>
<br />
<br />
<br />

<div class="card-deck">
    @foreach (var item in Model.products)
    {
        var photoPath = "~/images/" + (item.ProductPhotoPath);
        <div class="card m-3" style="min-width: 18rem; max-width:30.5%;">
            <div class="card-header" style="background-color:darkblue">
                <h4 style="color:white" class="text-center">@item.ProductName</h4>
            </div>

            <img style="height:200px;width:auto" class="card-img-top imageThumbnail" src="@photoPath"
                 asp-append-version="true" />
            <br />
            <div style="height:130px;overflow:hidden">
                <h4 class="text-center">@item.ProductPrice.ToString()</h4>
                <br />
                <h4 class="text-center">@item.supplyer.SupplierName.ToString()</h4>
                <br />
            </div>
            <div class="card-footer text-center" style="background-color:lightblue">
                <a asp-controller="Products" asp-action="Details" asp-route-ProductId="@item.ProductId"
                   class="btn btn-primary m-1">التفاصيل</a>
                <a asp-controller="Products" asp-action="Edit" asp-route-ProductId="@item.ProductId" class="btn btn-secondary m-1">تعديل</a>
                <a asp-controller="Products" asp-action="DeleteProduct" asp-route-ProductId="@item.ProductId" class="btn btn-danger m-1">حذف</a>
            </div>
        </div>
    }
</div>

